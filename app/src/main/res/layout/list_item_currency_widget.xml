<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/ivCurrency"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_gold_coin" />

    <TextView
        android:id="@+id/tvCoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivCurrency"
        android:layout_alignBottom="@id/ivCurrency"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/ivCurrency"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="Bitcoin" />

    <TextView
        android:id="@+id/tvCryptoCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivCurrency"
        android:layout_marginTop="10dp"
        android:text="@string/crypto_compare"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCryptoComparePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvCryptoCompare"
        android:layout_alignBottom="@id/tvCryptoCompare"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/tvCryptoCompare"
        tools:text="2.4" />

    <TextView
        android:id="@+id/tvCoinCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCryptoComparePrice"
        android:layout_marginTop="10dp"
        android:text="@string/coin_cap"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCoinCapPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvCoinCap"
        android:layout_alignBottom="@id/tvCoinCap"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/tvCoinCap"
        tools:text="2.4" />

</RelativeLayout>